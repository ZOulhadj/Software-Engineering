extends layouts/main-layout.pug
block content
    h1 All Contries In The World
    table
        tr(class="table-head")
            th Code 
            th Name               
            th Continent     
            th Region                    
            th SurfaceArea 
            th IndepYear 
            th Population 
            th LifeExpectancy 
            th GNP        
            th GNPOld     
            th LocalName     
            th GovernmentForm          
            th HeadOfState
            th Capital 
            th Code2

        for country in rows

            tr
                td= country.Code 
                td= country.Name               
                td= country.Continent     
                td= country.Region                    
                td= country.SurfaceArea 
                td= country.IndepYear 
                td= country.Population 
                td= country.LifeExpectancy 
                td= country.GNP        
                td= country.GNPOld     
                td= country.LocalName     
                td= country.GovernmentForm          
                td= country.HeadOfState 
                td= country.Capital 
                td= country.Code2